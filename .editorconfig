# Root
root = true

# Global config
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8

# Markdown
[*.md]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell
[*.sh]
indent_style = space
indent_size = 2
